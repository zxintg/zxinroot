<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="@dimen/size_10dp"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/item_androidbus_iamge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:maxWidth="150dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_iamge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/item_androidbus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp"
            tools:text="标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/item_androidbus_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/default_iamge"
                />

            <TextView
                android:id="@+id/item_androidbus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                tools:text="作者"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传时间:"
                />
            <TextView
                android:id="@+id/item_androidbus_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                tools:text="上传时间"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_androidbus_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_13sp"
            android:maxLines="4"
            android:ellipsize="end"
            tools:text="内容" />

    </LinearLayout>
</LinearLayout>