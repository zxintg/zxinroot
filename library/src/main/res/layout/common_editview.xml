<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_editview">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edittext_leftText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:text="左边标题"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/size_14sp" />

        <View
            android:id="@+id/tv_edittext_leftLine"
            style="@style/line_ver_style"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/et_edittext_contentEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            tools:text="内容"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_cbcbcb"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/size_14sp" />

        <View
            android:id="@+id/tv_edittext_rightLine"
            style="@style/line_ver_style"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_edittext_rightText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:text="右边标题"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:visibility="gone"
            android:textSize="@dimen/size_14sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        style="@style/line_style"
        android:visibility="gone"
        />

</LinearLayout>